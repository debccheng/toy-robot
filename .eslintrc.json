{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-typescript"
    ],
    "overrides": [
      {
        "files": ["*.ts, *.tsx"], // Your TypeScript files extension
        "parserOptions": {
          "project": ["./tsconfig.json"] // Specify it only for TypeScript files
        }
      }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".jsx", ".ts", ".tsx"]
          }
        }
      },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "indent": ["error", 2]
    }
}
